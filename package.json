{
  "name": "word-connect-spanish",
  "version": "1.0.0",
  "description": "Interactive crossword-style word game for Spanish vocabulary learning with bonus word system",
  "main": "generate_puzzles.js",
  "scripts": {
    "generate": "node generate_puzzles.js",
    "generate:glossary": "node generate_puzzles.js --glossary span10011002.json --levels 40",
    "generate:url": "node generate_puzzles.js --glossary https://raw.githubusercontent.com/balpomorelitm/word-connect-spanish/main/span10011002.json --levels 40",
    "serve": "python -m http.server 8000",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "spanish",
    "education",
    "word-game",
    "crossword",
    "vocabulary",
    "learning",
    "puzzle"
  ],
  "author": "balpomorelitm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/balpomorelitm/word-connect-spanish"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}